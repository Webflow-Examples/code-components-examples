---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar/Navbar';
import "../components/StoreLocator/styles.css";

const apiBaseUrl = Astro.locals.runtime.env.PUBLIC_BETTER_AUTH_URL + import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/map/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<ViewTransitions />
	</head>
	<body>
		<Navbar client:load apiBaseUrl={apiBaseUrl} />
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
