---
const site_id = Astro.url.searchParams.get('site_id');
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Setup Your Store Locator</title>
</head>
<body>
  <h1>Setup Time Machine Locator</h1>
  <p>
    Authentication with Webflow was successful. Please enter your Mapbox Public API Key below to complete the setup.
  </p>
  
  <form action={`${import.meta.env.VITE_BACKEND_URL}/api/setup/${site_id}`} method="POST">
    <label for="mapbox-key">Mapbox API Key:</label>
    <input type="text" id="mapbox-key" name="mapboxKey" required />
    <button type="submit">Save Key</button>
  </form>
</body>
</html>
